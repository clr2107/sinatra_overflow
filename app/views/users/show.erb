<% if current_user %>
  <h1><%= current_user.first_name %>'s Account</h1>
  <a href= "/logout"> Log Out </a>

<div class='question-container'>
  <% @questions.each do |question| %>

    <article id="<%= question.id %>">
      <form method="post" action='/questions/<%= question.id %>/vote' class="inline">
        <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button upvote-button"></button>
      </form>
      <h2><a href='/questions/<%= question.id %>'><%= question.question_text %></a></h2>
      <p>
        <span class='author'><%= question.user.first_name %></span>
        <a class="delete" href='/questions/<%= question.id %>'></a>
      </p>
    </article>

  <% end %>
</div>

<% else %>
  <h3><a href="/">Login</a></h3>
<% end %>
